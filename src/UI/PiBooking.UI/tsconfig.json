{
  "compileOnSave": false,
  "compilerOptions": {
    "module": "esnext",
    "skipLibCheck": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "target": "es5",
    "lib": [
      "es2015",
      "dom"
    ],
    "moduleResolution": "node",
    "baseUrl": ".",
    "paths": {
      "*": [ "src/*" ],
      "@app/*": [ "src/app/*" ]
    },
      "allowJs": true
    },
    "include": [
      "./src/**/*.ts",
      "./types/**/*.d.ts"
    ],
    "atom": {
      "rewriteTsconfig": false
    }
  }
